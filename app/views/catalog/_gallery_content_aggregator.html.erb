<div id="child_gallery" class="row" style="<%= structured_children.length > 1 ? '' : 'display:none;'%>">
  <div class="<%= (structured_children.length > 4) ? 'child-scroll' : '' %>">
		<% structured_children.each_with_index do |child, ix| -%>
			<div class="col-sm-<%= (structured_children.length <= 2) ? '6' : '3' %>">
				<article class="child-container">
					<a rel="item-link" data-child-number="<%= ix %>" class="<%= ix == 0 ? 'selected' : '' %> tocontent post thumbnail document blacklight-photographs">
						<img src="<%= get_resolved_asset_url(id: child[:id], size: 256, type: 'full', format: 'jpg') %>" alt="<%= child[:title] %>" />
					</a>
					<div class="caption aligncenter">
						<div class="documentHeader">
							<a rel="item-link" data-src="<%= get_resolved_asset_url(id: child[:id]) %>.json" data-id="<%=child[:id]%>"><i class="icon-zoom-in"></i></a>
							<div class="index_title">
								<%= document['title_display_ssm'].present? && child[:title] == document['title_display_ssm'].first ? '&nbsp;'.html_safe : child[:title] %>
							</div>
							<% if has_synchronized_media?(child) -%>
								<div class="index_subtitle"><%= t('dlc.media_synchronized') %></div>
							<% end -%>
						</div>
					</div>
				</article>
			</div>
	  <% end %>
  </div>
</div>
