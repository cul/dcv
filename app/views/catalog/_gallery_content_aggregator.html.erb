<div id="child_gallery" class="row" style="<%= structured_children.length > 1 ? '' : 'display:none;'%>">
  <div class="<%= (structured_children.length > 4) ? 'child-scroll' : '' %>">
		<% structured_children.each_with_index do |child, ix| -%>
			<div class="col-sm-<%= (structured_children.length <= 2) ? '6' : '3' %>">
				<article class="child-container">
					<a rel="item-link" class="tocontent post thumbnail document blacklight-photographs <%= ix == 0 ? 'selected' : '' %>" data-original-title="<%= child[:title] %>" data-sequence="<%= ix %>" data-counter="<%= child[:order] %>" href="<%= get_resolved_asset_url(id: child[:id], size: 768, type: 'full', format: 'jpg') %>" data-info-url="<%= get_resolved_asset_info_url(id: child[:id], image_format: 'jpg') %>" data-bytestreams="<%= resolve_catalog_bytestreams_path(catalog_id: child[:id], :format=>'json') %>" onclick="favoriteChild(this); return false;" data-id="<%=child[:id]%>">
						<img src="<%= get_resolved_asset_url(id: child[:id], size: 256, type: 'full', format: 'jpg') %>" />
					</a>
					<div class="item-in-context aligncenter"><%
						item_in_context_url = document.self_and_child_pids_to_item_in_context_urls.key?(child[:id]) ? document.self_and_child_pids_to_item_in_context_urls[child[:id]] : document.item_in_context_url
						if item_in_context_url.present?
							%><small><a class="item-in-context-url" href="<%= item_in_context_url %>" target="_blank" data-toggle="tooltip" title="Object in Context"> View Object in Context</a></small><%
						end
					%></div>
					<div class="caption aligncenter">
						<div class="documentHeader">
							<a rel="item-link" data-src="<%= get_resolved_asset_url(id: child[:id]) %>.json" data-id="<%=child[:id]%>"><i class="icon-zoom-in"></i></a>
							<div class="documentFunctions"></div>
							<div class="index_title"><%= child[:title] == document_show_html_title ? '&nbsp;'.html_safe : child[:title] %></div>
						</div>
					</div>
				</article>
	    </div>
	  <% end %>
  </div>
</div>
