<ul class="facet-values list-unstyled">
  <% paginator = facet_paginator(facet_field, display_facet)
  %>
  <% paginator.items.each do |item| -%>
    <li>
    <% if facet_in_params?( solr_field, item.value ) %>
        <%= render_selected_facet_value(solr_field, item) %>
      <% else %>
        <%= render_facet_value(solr_field, item) %>
    <% end -%>
    </li>
  <% end %>

  <% if !paginator.last_page? and params[:action] != "facet" %>
    <li class="more_facets_link">
			<%= link_to(t('blacklight.search.facets.more'), params.merge(:id => solr_field, :action=>"facet", :page => nil), :class => "facet-label more_facets_link") %>
			<span class="facet-count"></span>
		</li>
  <% end %>

</ul>

