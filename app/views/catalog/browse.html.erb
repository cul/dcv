<div class="row">

  <div id="content" class="col-md-12">

    <div id="home-page-tabs" class="inner">
      <!-- Nav tabs -->
      <% active_tab = params[:list] || 'sample_items' -%>
      <ul class="nav nav-tabs">
        <li class="<%= 'active' if active_tab == 'sample_items' %>"><a href="#sample_items" data-toggle="tab">Sample Items</a></li>
        <% @browse_lists.each do |facet_name, data| %>
          <li class="<%= 'active' if active_tab == facet_name %>"><a href="#tab_<%= facet_name %>" data-toggle="tab"><%= data['display_label'] %></a></li>
        <% end %>
        <li class="<%= 'active' if active_tab == 'projects' %>"><a href="#projects" data-toggle="tab">Digital Projects</a></li>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane fade<%= ' in active' if active_tab == 'sample_items' %>" id="sample_items">
              <small>Below, you'll find a randomly selected sample of items from several of our repositories.</small>
              <br /><br />
              <%- if @response.empty? %>
              <%= render "zero_results" %>
              <%- elsif render_grouped_response? %>
              <%= render_grouped_document_index %>
              <%- else %>
              <%= render_document_index %>
              <%- end %>
              <div class="clearfix"></div>
        </div>
        <% @browse_lists.each do |facet_name, data| %>
          <div class="tab-pane fade<%= ' in active' if active_tab == facet_name %>" id="tab_<%= facet_name %>">
            <small><%= data['short_description'] %></small>
            <br /><br />
            <ul class="nopad-rl cols-two">
              <% data['value_pairs'].each do |value, count| %>
                <% search_link = search_action_path(:f => {facet_name => [value]}) %>
                <li><%= link_to value, search_link %> (<%= count %>)</li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="tab-pane fade<%= ' in active' if active_tab == 'projects' %>" id="projects">
          <%= render template: 'pages/digital_projects' -%>
        </div>
      </div>
    </div> <!--/.inner-->

  </div>

</div>
