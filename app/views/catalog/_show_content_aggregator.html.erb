<div class="row" id="child_items">
  <div id="item-description" class="col-md-3">
   <div class="inner">
    <dl class="dl-vertical">
      <% document_show_fields(document).each do |solr_fname, field| -%>
        <% if should_render_show_field? document, field -%>
          <dt class="blacklight-<%= solr_fname.parameterize %>"><%= render_document_show_field_label document, :field => solr_fname %></dt>
          <dd class="blacklight-<%= solr_fname.parameterize %>"><%= render_document_show_field_value document, :field => solr_fname %></dd>
        <% end -%>
      <% end -%>
    </dl>
   </div>
  </div>
  <div class="col-md-9">
   <div class="inner">
     <h3 class="nomar"><%= document_show_html_title -%></h3>
     <% if ct = structured_children.first -%>
       <p id="ct"><%= ct[:title] %></p>
     <% end -%>
   <div id="favorite-child"> 
    <% if child = structured_children.first -%>
      <div class="btn-group" style="position:absolute;top:10px;right:10px;">
        <a class="btn btn-default btn item-cbox" data-original-title="<%= document_show_html_title %>" href="<%= details_url(id: document[:id], layout:(request.path.split('/')[1])) %>"><i class="glyphicon glyphicon-zoom-in"></i></a>
<button type="button" class="btn btn-default btn dropdown-toggle" data-toggle="dropdown">
    <i class="glyphicon glyphicon-cog"></i> <span class="caret"></span>
    <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu dropdown-menu-right" role="menu">
        <li><a href="#" data-original-title="<%= document_show_html_title %>" onclick="window.open('<%= details_url(id: document[:id], layout:(request.path.split('/')[1])) %>'); return false;">Open in a new window</a></li>
  </ul>
      </div>
      <img src="<%= child[:screen] || resolve_catalog_bytestream_content_url(catalog_id: child[:id], bytestream_id: 'web850') %>.png" data-counter="1" />
    <% end -%>
   </div>
<%= render_document_partials @document, ['gallery'] %>
   </div>
  </div>
</div>
