<% #Using the Bootstrap Pagination class  -%>
  <div id="previousNextDocument">
    <% if @previous_document || @next_document %>
      <div class="page_links previous-and-next btn-group btn-group-xs">
        <%= link_back_to_catalog(label: '<i class="glyphicon glyphicon-fast-backward"></i> '.html_safe, class: 'btn btn-default' ) %>
        <%= button_to_previous_document @previous_document, class: 'btn btn-default' %>
        <%= button_to_next_document @next_document, class: 'btn btn-default' %>
      </div>
    <% end %>
    <div class="pull-right search-widgets">
      <%= render 'show_tools' %>
    </div>
  </div>
