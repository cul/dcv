<% if structured_children.first -%>
  <a class="btn btn-default item-cbox" data-original-title="<%= document_show_html_title %>" title="Zoom in" href="#" onclick="return DCV.ZoomingImageModal.show();"><i class="glyphicon glyphicon-eye-open"></i></a>
  <a class="btn btn-default" href="#" data-original-title="<%= document_show_html_title %>" title="Open in new window" onclick="return DCV.ZoomingImageModal.openInNewWindow();"><i class="glyphicon glyphicon-new-window"></i></a>
<% end -%>
<div class="btn-group btn-group-xs">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" title="Downloads">
  <i class="glyphicon glyphicon-download-alt"></i> <span class="caret"></span>
  <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul id="item-show-downloads" class="dropdown-menu pull-right" role="menu"></ul>
</div>
<div class="btn-group btn-group-xs">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" title="Citations">
  <i class="glyphicon glyphicon-book"></i> <span class="caret"></span>
  <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul id="item-show-citations" class="dropdown-menu pull-right" role="menu">
    <li><%= link_to 'APA Citation', item_citation_path(document['id'], type: 'apa'), :onclick => 'return DCV.CitationDisplayModal.show($(this).attr("href"), "APA");' %></li>
    <li><%= link_to 'Chicago Citation', item_citation_path(document['id'], type: 'chicago'), :onclick => 'return DCV.CitationDisplayModal.show($(this).attr("href"), "Chicago");' %></li>
    <li><%= link_to 'MLA Citation', item_citation_path(document['id'], type: 'mla'), :onclick => 'return DCV.CitationDisplayModal.show($(this).attr("href"), "MLA");' %></li>
  </ul>
</div>
