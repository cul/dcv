<% if structured_children.first -%>
  <a class="btn btn-default item-cbox" data-original-title="<%= document_show_html_title %>" href="#" onclick="return DCV.ZoomingImageModal.show();"><i class="glyphicon glyphicon-eye-open"></i></a>
  <a class="btn btn-default" href="#" data-original-title="<%= document_show_html_title %>" title="Open in new window" onclick="return DCV.ZoomingImageModal.openInNewWindow();"><i class="glyphicon glyphicon-new-window"></i></a>
<% end -%>
<div class="btn-group btn-group-xs">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" title="Downloads">
  <i class="glyphicon glyphicon-download-alt"></i> <span class="caret"></span>
  <span class="sr-only">Toggle Dropdown</span>
</button>
<ul id="item-show-downloads" class="dropdown-menu pull-right" role="menu">
  <li>
    <%= link_to '<span class="glyphicon glyphicon-file"></span> Download Metadata'.html_safe, item_mods_path(:pid => @document.id), :'data-no-turbolink' => true %>
  </li>
</ul>
</div>
