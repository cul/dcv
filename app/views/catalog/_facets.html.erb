<% # main container for facets/limits menu -%>
<% if has_facet_values?  %>
<div <%= defined?(is_home_view) && is_home_view ? '' : 'id="facets"'.html_safe %> class="facets sidenav">

  <div class="top-panel-heading panel-heading">
    <button type="button" class="facets-toggle" data-toggle="collapse" data-target="#facet-panel-collapse">
      <span class="sr-only">Toggle facets</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>

		<% unless defined?(hide_refine_heading) && hide_refine_heading %>
		<h4><%= t('blacklight.search.facets.title') %></h4>
		<% end %>
  </div>

  <div id="facet-panel-collapse" class="collapse panel-group">
    <%= render_facet_partials %>
    <%= render :partial => 'sidebar_date_selector' %>
  </div>
</div>
<% else %>
	No facets available.
<% end %>
