<div class="container">
<% if current_page?(root_url) %>
  <div id="site-banner">
	<div class="row">
	 <div id="site-banner-inner" <%= !current_page?(root_url) ? 'class="slim"'.html_safe : '' %>> 
	  <div class="col-sm-3 hidden-xs">
	   <div id="site-banner-left"><%= link_to '', root_path, { :style => 'display:block;width:100%;height:100%;' } %></div> 
	  </div>
	  <div class="col-sm-9">
		<h1><%= link_to image_tag('dcv/dcv-banner-sm-c.png', :alt => 'Digital Library Collections'), root_path %></h1>
	  </div>
	 </div>
	</div><!--/row-->

	<div id="search-navbar" class="<%= !current_page?(root_url) ? 'slim ' : '' %>navbar navbar-default" role="navigation">
		<%= render_search_bar  %>
    </div>
  </div>

<% else -%>

  <div id="site-banner" style="margin-bottom:1em;">
	<div class="row">
	 <div id="site-banner-inner" style="margin-top:.9em;">
	  <div class="col-sm-3">
	   <%= link_to image_tag('dcv/dcv-banner-sm-dc.png', :alt => 'Digital Library Collections', :style => 'max-width:100%;margin-top:1em;'), root_path %>
	  </div>
	  <div class="col-sm-9">
	    <div id="search-navbar" class="navbar navbar-default slim" role="navigation">
		  <%= render_search_bar  %>
        </div>
	  </div>
	 </div>
	</div><!--/row-->
  </div>
<% end -%>
</div>
