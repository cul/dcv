<div class="container" id="site-banner">
<% if controller.controller_name != "catalog" or current_page?(root_url) %>
<div class="row" style="background:rgba(0,0,0,.3);margin-left:-20px;margin-right:-20px;overflow:hidden;">
  <div class="col-sm-3">
   <div style="margin-top:20px;background-image:url(/thumbs/ldpd:138544);background-repeat:no-repeat;background-position:center center;background-size:104%;height:128px;vertical-align:middle;width:100%;"></div>
  </div>
  <div class="col-sm-9">
  <h1><%= link_to image_tag('dcv/dcv-banner-sm-c.png', :alt => 'Digital Library Collections'), root_path %></h1>
  </div>
</div>
<% end %>

<nav class="navbar navbar-inverse hide" role="navigation">
<div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-menu">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    <a class="navbar-brand" href="/"><i class="glyphicon glyphicon-home"></i></a>
    </div>
    <div class="collapse navbar-collapse navbar-right" id="main-menu">
     <%= render :partial=>'/user_util_links' %>
    </div>
  </div>
</nav>

<% if controller.controller_name == "catalog" and !current_page?(root_url) %>
  <div id="search-navbar" class="navbar navbar-default" role="navigation" style="margin-top:2.5em;margin-bottom:1em;">
<div class="row">
<div class="col-md-3">
  <%= link_to image_tag('dcv/dcv-banner-sm-b.png', :alt=> 'Columbia Digital Library Collections'), root_path, { :class => 'text-lg', :id=> 'banner-sm' } %>
</div>
<div class="col-md-9">
    <%= render_search_bar  %>
</div>
</div>
<% else %>
  <div id="search-navbar" class="navbar navbar-default" role="navigation">
    <%= render_search_bar  %>
<% end %>
  </div>
</div>
