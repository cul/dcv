<div class="form-group panel panel-info scope_filter" id="scope_filters_<%= filter_form.index %>">
	<div class="panel-heading form-inline">
		<div class="panel-heading"><h3 class="panel-title"><%= filter_form.object.new_record? ? 'New' : filter_form.object.filter_type.titlecase %> Filter</h3></div>
	</div>
	<div class="panel-body" id="scope_filters_<%= filter_form.index %>_atts">
		<%- if filter_form.object.new_record? %>
		<div class="form-group">
			<label for="site[scope_filters_attributes][<%= filter_form.index %>][filter_type]">Filter Type <span class="glyphicon glyphicon-question-sign" data-tooltip="tooltip-scope-filters-type"></span></label>
			<%= filter_form.select :filter_type, ScopeFilter::VALID_TYPES %>
		</div>
		<%- end %>
		<div class="form-group">
			<%- unless filter_form.object.new_record? %>
				<%= filter_form.hidden_field :filter_type %>
			<%- end %>
			<label for="site[scope_filters_attributes][<%= filter_form.index %>][value]">Filter Value <span class="glyphicon glyphicon-question-sign" data-tooltip="tooltip-scope-filters-value"></span></label>
			<%= filter_form.text_field :value, class: 'form-control' %>
		</div>
		<div class="form-group">
			<button class="btn btn-danger" type="button" onclick="$(this).closest('.scope_filter').remove();">
			<span class="glyphicon glyphicon-remove"></span> Remove Filter
			</button>
		</div>
	</div>
</div>
