<%- 
  if @subsite.slug =~ /restricted\//
    slug_param = @subsite.slug.sub('restricted/', '')
    site_edit = edit_restricted_site_path(slug: slug_param)
    site_view = restricted_site_path(slug: slug_param)
  else
    site_edit = edit_site_path(slug: @subsite.slug)
    site_view = site_path(slug: @subsite.slug)
  end
-%>
<h1>Editing <%= @subsite.slug %> permissions</h1>
<%= render partial: "sites/edit/edit_buttons" %>
<%- if @subsite.search_type != 'local' %>
	<div class="container">
		<div class="panel panel-warning">
			<div class="panel-heading"><h2 class="panel-title">Configuration May Not Apply!</h2></div>
			<div class="panel-body">The properties configured below are for sites with a local search. This site has a <%= @subsite.search_type %> search. This can be changed in the <%= link_to('site properties', site_edit) %>.</div>
		</div>
	</div>
<% end -%>
<div class="container"><%= render 'sites/permissions/form' %></div>
<div class="hide widget-templates">
<%- buffer = "" %>
<%- buffer << render(partial: "sites/edit/text_list_value", locals: { list_name: [:permissions, :remote_roles], value: "", index: "9valueIndex9", removable: true }) %>
<%- buffer << render(partial: "sites/edit/text_list_value", locals: { list_name: [:permissions, :locations], value: "", index: "9valueIndex9", removable: true }) %>
<%= buffer.html_safe %>
</div>