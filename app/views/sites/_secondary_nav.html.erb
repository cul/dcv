<div id="secondary-nav" class="">
	<div class="subnav">
		<div class="row">
			<div class="col-sm-12">
			<ul class="nav nav-pills pull-left">
				<%- @subsite.nav_menus.each do |nav_menu| -%>
					<%- if nav_menu.length > 1 -%>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=nav_menu.label %> <b class="caret"></b></a>
							<ul class="dropdown-menu list-unstyled dropdown-menu-left">
								<%- nav_menu.links.each do |nav_link| -%>
									<li><%= link_to_nav(nav_link) %></li>
								<%- end -%>
							</ul>
						</li>
					<%- else -%>
						<li><%= link_to_nav(nav_menu.links[-1]) %></li>
					<%- end -%>
				<%- end -%>
			</ul>
			<%- if subsite_map_search.present? -%>
				<ul class="nav nav-pills pull-right">
					<li class="inline"><a style="margin-top:-5px;" href="<%= '/' + @subsite.slug + '/map_search' %>"><span class="glyphicon glyphicon-map-marker"></span> Map<span class="hidden-xs"> All Items</span></a></li>
				</ul>
			<%- end -%>
			<%- if params[:action] == 'home' && @subsite.persistent_url -%>
				<ul class="nav nav-pills pull-right">
					<li><button data-copy="<%= @subsite.persistent_url %>" title="Click to copy to clipboard" class="btn btn-default" onclick="DCV.Clipboard.copyFromElement(this);"><span class="glyphicon glyphicon-copy"></span> Permanent URL</button></li>
				</ul>
			<%- elsif @document&.has_persistent_url? -%>
				<ul class="nav nav-pills pull-right">
					<li><button data-copy="<%= @document.persistent_url %>" title="Click to copy to clipboard" class="btn btn-default" onclick="DCV.Clipboard.copyFromElement(this);"><span class="glyphicon glyphicon-copy"></span> Permanent URL</button></li>
				</ul>
			<%- end -%>
			</div><!--/-->
		</div><!--/row-->
	</div><!--/subnav-->
</div>
