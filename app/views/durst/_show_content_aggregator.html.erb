<div class="row" id="child_items">

	<div id="item-description" class="col-md-3">
		<%= render partial: 'catalog/sidebar_panels/item_map', locals: { document: document } %>
		<%= render partial: 'catalog/sidebar_panels/location_data', locals: { document: document } %>
		<%= render partial: 'catalog/sidebar_panels/links', locals: { document: document, configured_links: [:mods] } %>

  </div>

	<% is_postcard = document['lib_format_ssm'].present? && document['lib_format_ssm'].include?('postcards') %>

	<div class="col-md-9 ls-controls-dark">
		<%= render partial: 'catalog/content_aggregator/content_aggregator_viewer', locals: { document: document, use_unavailable_image_placeholder: false } %>
		<%= render partial: 'catalog/sidebar_panels/item_description', locals: { document: document, alignment: 'horizontal', link_helpers: (is_postcard ? [:render_url_and_catalog_links, :render_durst_location_information] : [:render_url_and_catalog_links]) } %>

	</div>

</div>
