<div class="row">
  <div id="nav" class="col-md-12">
    <%= render 'sort_and_per_page' %>
  </div>
	<div id="sidebar" class="col-md-3">
		<div class="inner">
			<%= render 'search_sidebar' %>
		</div>
		<div class="inner" style="margin-top:1em;">
			<script>
				DCV.centerLat = <%= params[:lat].present? ? params[:lat] : '40.7400' %>;
				DCV.centerLong = <%= params[:long].present? ? params[:long] : '-73.9802' %>;
				DCV.mapPlanes = <%= get_map_data_for_document_list(@document_list).to_json.html_safe %>;
				DCV.mapCoordinateSearchUrl = '<%= CGI.escape(url_for(params.merge(:lat => '_lat_', :long => '_long_', :search_field => params[:search_field] || 'all_text_teim', :q => params[:q] || ''))) %>';
			</script>
		  <!--<iframe id="durst_osm" width="100%" height="240" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.openstreetmap.org/export/embed.html?bbox=-73.97026062011719%2C40.80313871105938%2C-73.95225763320923%2C40.81483234091447&amp;layer=mapnik&amp;marker=40.80899%2C-73.96125" style="border: 0"></iframe> -->
			<div id="durst_osm"></div>
		  <div class="clearfix"></div>
		</div>
	</div>

	<div id="content" class="col-md-9">

		<div class="inner">

		<% unless has_search_parameters? %>
			Perform a search by typing something into the box above or selecting one of the lefthand facets!
		<% else %>

			<h2 class="sr-only top-content-title"><%= t('blacklight.search.search_results_header') %></h2>

			<% @page_title = t('blacklight.search.title', :application_name => application_name) %>

			<% content_for(:head) do -%>
			<%= render_opensearch_response_metadata %>
			<%= auto_discovery_link_tag(:rss, url_for(params.merge(:format => 'rss')), :title => t('blacklight.search.rss_feed') ) %>
			<%= auto_discovery_link_tag(:atom, url_for(params.merge(:format => 'atom')), :title => t('blacklight.search.atom_feed') ) %>
			<% end -%>

			<%= render 'search_header' %>

			<h2 class="sr-only"><%= t('blacklight.search.search_results') %></h2>

			<div id="search-result-container">
				<div>

					<%- if @response.empty? %>
						<%= render "zero_results" %>
					<%- else %>
						<%- if render_grouped_response? %>
							<%= render_grouped_document_index %>
						<%- else %>
							<%= render_document_index %>
						<%- end %>
					<%- end %>

                    <div id="extended-search-results" class="hidden">
                        <div class="row">
<div class="col-sm-12">
  <h4>Search Other Sources for: <span class="text-danger"><%=params[:q]%></span></h4>
  <p>Try your search in one of these related resources. (Search results will display in a new window.)</p>
  <hr>
	  <ul class="list-unstyled">
	    <li style="margin-bottom:.75em;"><a class="btn btn-lg btn-link pull-right" data-target="blank" href="http://www.archive-it.org/explore?q=<%=params[:q]%>&amp;amp;page=1&amp;amp;show=Collections" target="_blank"><span class="glyphicon glyphicon-circle-arrow-right text-danger"></span></a>
         <a data-exitmsg="You are now leaving the DLC" data-target="blank" href="http://www.archive-it.org/explore?q=<%=params[:q]%>&amp;amp;page=1&amp;amp;show=Collections" target="_blank">Archive-It</a><br>
		<span>All web archives created by Archive-It partner institutions, including Columbia University.</span>
       </li>
        <li style="margin-bottom:.75em;">
	   <a class="btn btn-lg btn-link pull-right" data-target="blank" href="http://www.hurisearch.org/?q=<%=params[:q]%>&amp;amp;ql=&amp;amp;ngo=1&amp;amp;nhri=1&amp;amp;academic=1&amp;amp;igo=1" target="_blank"><span class="glyphicon glyphicon-circle-arrow-right text-danger"></span></a>
        <a data-exitmsg="You are now leaving the DLC" data-target="blank" href="http://www.hurisearch.org/?q=<%=params[:q]%>&amp;amp;ql=&amp;amp;ngo=1&amp;amp;nhri=1&amp;amp;academic=1&amp;amp;igo=1" target="_blank">HuriSearch</a><br>
       <span>Custom live web search engine for over 5,000 human rights websites powered by Huridocs.</span>
</li>
	</ul>
</div>
                        </div>
                    </div>
				</div>
			</div>

			<%= render 'results_pagination' %>

		<% end %>

		</div> <!--/.inner-->

	</div>

</div>
