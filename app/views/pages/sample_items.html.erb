<% active_tab ||= 'sample_items' -%>
<div class="tab-pane fade<%= 'in active' if active_tab == 'sample_items' %>" id="sample_items">
	<small>Below, you'll find a randomly selected sample of items from several of our library locations.</small>
	<br /><br />
	<%- if @response.empty? %>
	<%= render "zero_results" %>
	<%- elsif render_grouped_response? %>
	<%= render_grouped_document_index %>
	<%- else %>
	<%= render_document_index %>
	<%- end %>
	<div class="clearfix"></div>
</div>

